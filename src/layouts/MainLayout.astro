---
// component import
import MainHead from "./MainHead.astro";
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";

// style import
import "../styles/global.css";

const {
  title = "Ethical Hacking Tutorials",
  description = "Learn Hacking Pentesting and Security",
  image,
  data,
  robots,
} = Astro.props;
---

<html lang="en">
  <MainHead {title} {description} {image} {data} {robots} />
  <body>
    <!-- Google Tag Manager (noscript) -->
<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-5N6QJP"
  height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
  <!-- End Google Tag Manager (noscript) -->
    <Nav />
    <main>
      <slot> Default Text</slot>
    </main>
    <Footer />
  </body>
</html>


<style>
  .astro-toc {
    border: 1px solid black;
    padding: 1rem;
    margin-bottom: 1rem;
  }

  .astro-toc ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .astro-toc li {
    margin-bottom: .5rem;
  }

  .astro-toc a {
    color: black;
  }
</style>