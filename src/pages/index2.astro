
---
import { getCollection, CollectionEntry } from "astro:content";

// component imports
import MainLayout from "../layouts/MainLayout.astro";
import PostCard from "../components/PostCard.astro";
import Link from "../components/Link.astro";

// utils imports
import { formatBlogPosts } from "../js/utils";

const allPosts = await getCollection("blog");
const formattedPosts: CollectionEntry<"blog">[] = formatBlogPosts(allPosts, {
  limit: 6,
});
---

<MainLayout title="Ethical Hacking Tutorials">
    <section class="container about" aria-label="About Me">
        <img
          src="/images/headshot.jpg"
          alt="My headshot"
          width="200"
          height="330"
        />
        <div class="content">
          <h1 class="h1">Ethical Hacking Tutorials</h1>
          <p>
            Just Another Security Guy sharing thoughts and helping beginners in Security . . .
    
          </p>
          <p>
          <Link
            href="https://www.linkedin.com/in/abhinavkakku/"
            style="primary"
            text="Contact Me"
            icon={{
              name: "openmoji:linkedin",
              side: "left",
            }}
          /> 
        </div>
      </section>
  
  <section class="container" aria-label="New Blog Posts">
    <h2 class="h1">New Blog Posts</h2>
    <div class="post-container">
      {
        formattedPosts.map((post) => (
          <PostCard data={post.data} url={post.slug} tagType="h3" />
        ))
      }
    </div>
  </section>
</MainLayout>
